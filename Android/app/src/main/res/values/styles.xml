<resources>

    <!-- Base application theme. -->
    <!-- Customize your theme here. -->
    <!-- Changed to unused "AppTheme2" because there is another style name="AppTheme" defined in dot3Android/app/src/main/res_tabs/values/template-styles.xml
            that enables the ActionBar
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Toolbar Button -->
    <style name="toolbar_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/toolbar_button_normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Discover Teaser Text Style -->
    <style name="discover_teaser_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>
